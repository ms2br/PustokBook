@model CreateAdminSliderVM;
@section styles {
    <!-- Custom fonts for this template-->
    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet">
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="AuthorName" class="form-label"></label>
        <input class="form-control" asp-for="AuthorName">
        <span asp-validation-for="AuthorName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BookName" class="form-label"></label>
        <input class="form-control"  asp-for="BookName">
        <span asp-validation-for="BookName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label"></label>
        <input class="form-control" accept="image/*"  asp-for="ImageFile">
        <span asp-validation-for="ImageFile"></span>
    </div>
    <div class="mb-3 form-check">
        <label for="left" class="form-label">Left</label>
        <input asp-for="Position" value="0" type="radio" id="left">

        <label for="right" class="form-label">Right</label>
        <input asp-for="Position" value="1" type="radio" id="right">

        <span asp-validation-for="Position"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts {
    <!-- Custom scripts for all pages-->
    <script src="~/admin/js/sb-admin-2.min.js"></script>
}